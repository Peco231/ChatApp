@page "{id}"
@model ChatApp.Pages.ChatModel
@{
    ViewData["Title"] = "Chat";
}

<style>
    div.panel-body {
        overflow: scroll;
        background: url('http://subtlepatterns.com/patterns/geometry2.png');
    }

</style>
<h2>ChatBox</h2>
<div class="chat-panel panel panel-default" >
    <div class="panel-heading " >
        ChatBox using SingalR
        <i class="fa fa-paper-plane fa-fw"></i>
    </div>
    <div class="panel-body " id="chat" style="height:300px;">
        <input type="hidden" id="displayname" />
        @{
            if (Model.messages.Count > 0)
            {
                foreach (var msg in Model.messages)
                {
                    if (msg.SenderId == Model.currentUser.Id)
                    {
                        <div class="row left">
                            <p class="pull-left peovi">
                                <small>--@msg.Sender.FirstName :</small>
                                @msg.Text &nbsp;
                                <small>--@msg.Time</small>
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="row right">
                            <p class="pull-right peovi ">
                                <small>--@msg.Sender.FirstName :</small>
                                @msg.Text &nbsp;
                                <small>--@msg.Time</small>
                            </p>
                        </div>
                    }

                }
            }
            else
            {
                <p class="text-center">Say something to your friend :D</p>
            }
        }

        <p id="discussion">

        </p>
    </div>
    <div class="panel-footer">
        <div class="input-group">
            <input id="message" type="text" name="message" class="form-control"   placeholder="Type your message here..." />
            <span class="input-group-btn">
                <input type="button" class="btn btn-success" id="sendmessage" value="Send">
            </span>
        </div>
    </div>
</div>

